<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" 
         xmlns="https://jakarta.ee/xml/ns/jakartaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">

    <context-param>
        <param-name>jakarta.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>

    <!-- Session Config -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>

    <security-constraint>
        <display-name>Index Page Access</display-name>
        <web-resource-collection>
            <web-resource-name>Index Page</web-resource-name>
            <url-pattern>/faces/index.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
            <role-name>JsfUser</role-name>
            <role-name>RestUser</role-name> 
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>AppUser Management (Admin Only)</display-name>
        <web-resource-collection>
            <web-resource-name>AppUser Pages</web-resource-name>
            <url-pattern>/faces/appuser/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>React Page Protection</display-name>
        <web-resource-collection>
            <web-resource-name>React Page</web-resource-name>
            <url-pattern>/react-bouncer.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
            <role-name>RestUser</role-name>
        </auth-constraint>
    </security-constraint>


    <security-constraint>
        <display-name>React App Protection</display-name>
        <web-resource-collection>
            <web-resource-name>React Frontend</web-resource-name>
            <url-pattern>/react/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
            <role-name>RestUser</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>REST API Protection</display-name>
        <web-resource-collection>
            <web-resource-name>REST API</web-resource-name>
            <url-pattern>/resources/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
            <role-name>RestUser</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>Admin</role-name>
    </security-role>
    <security-role>
        <role-name>JsfUser</role-name>
    </security-role>
    <security-role>
        <role-name>RestUser</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>Application Realm</realm-name>
        <form-login-config>
            <form-login-page>/faces/login.xhtml</form-login-page>
            <form-error-page>/faces/login.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    
    <error-page>
        <error-code>403</error-code>
        <location>/faces/403.xhtml</location>
    </error-page>

</web-app>
